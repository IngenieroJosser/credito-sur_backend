{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2023",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],

    "declaration": false,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "incremental": true,

    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts"
  ]
}
